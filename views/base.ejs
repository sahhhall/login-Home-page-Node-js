
<!-- this for adding part header -->

<div class="text-center center-div" id="login" >
    <div class="container w-25 border border-dark py-5" style="border-radius: 40px; ">
        <div class="title pt-3">
            <h2 class="font-weight-bold">Login System</h2>
            <span >Log in for the existing user</span>
            <% if(locals.logout){%>
                    <div class="alert alert-success text-center" > <%= logout %></div>
                   
                <%}%>
                <% if (locals.message) { %>
                    <div class="alert alert-danger d-flex align-items-center  " role="alert">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2 " viewBox="0 0 16 16" role="img" aria-label="Warning:">
                          <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                        </svg>
                        <div >
                            <strong>Hey !</strong>
                          <%= message %>
                        </div>
                      </div>
                      
                    
                <% } %>
        </div>
        <form action="/route/login" method="post" class="mt-3">
            <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="Enter email">
                <small class="form-text text-muted text-left">Register email</small>
            </div>
            <div class="form-group pb-3">
                <input type="password" class="form-control" name="password" placeholder="Enter password" >
                
            </div>
            <button  type="submit" class="btn btn-dark rounded-pill">Submit</button>
        </form>
    </div>
</div>



<%-include('header')-%>